<div class="row">
<div class="col-sm-6">
<%= form_for(@setting) do |f| %>
  <% if @setting.errors.any? %>
    <div class="alert alert-warning">
      <h2><%= pluralize(@setting.errors.count, "error") %> prohibited this setting from being saved:</h2>
      <ul>
      <% @setting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :raspi_id, "ID" %>
    <input type="text" value="<%= @setting.id.present? ? @setting.id : "*(自動割当)" %>" class="form-control" disabled="disabled"/>
    <%= f.hidden_field :raspi_id %>
  </div>
  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :min_tmpr, "最低気温" %>
    <%= f.text_field :min_tmpr, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :max_tmpr, "最高気温" %>
    <%= f.text_field :max_tmpr, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.fields_for :sakura_iot_modules do |sim| %>
      <%= sim.label :token, "さくらのIoT トークン" %>
      <%= sim.text_field :token, class: "form-control" %>
    <% end %>
  </div>
  <%= f.submit "保存する", class: "btn btn-primary" %>
<% end %>
</div>
</div>
<hr/>
