<p id="notice"><%= notice %></p>

<% content_for :title, "センサ一覧" %>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th><%= t("activerecord.attributes.setting.min_tmpr") %></th>
      <th><%= t("activerecord.attributes.setting.max_tmpr") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.raspi_id %></td>
        <td><%= setting.name %></td>
        <td><%= setting.min_tmpr %></td>
        <td><%= setting.max_tmpr %></td>
        <td><%= link_to '表示', setting, class: "btn btn-sm btn-default" %></td>
        <td><%= link_to '編集', edit_setting_path(setting), class: "btn btn-sm btn-default" %></td>
        <td><%= link_to '削除', setting, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-sm btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>
<%= link_to 'センサを追加する', new_setting_path, class: "btn btn-primary" %>
<%= link_to '戻る', dashboard_path, class: "btn btn-default" %>
</p>
