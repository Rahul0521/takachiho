<div id="chart_t" class="col-md-12">
Loading..
</div>
<p><small><%= @notice %></small></p>
<script>
	$.getJSON('../graph_data.json', <%= @p.html_safe %> ,function (data) {
		$('#chart_t').highcharts({
				chart: {
						type: 'line'
				},
				title: {
						text: '気温 (°C)',
				},
				xAxis: {
						type: 'datetime'
				},
				yAxis: {
						title: {
								text: ''
						},
						plotBands: [{
								from: <%= @min_tmpr %>,
								to: <%= @max_tmpr %>,
								color: 'rgba(68, 170, 213, .2)'
						}]
				},
				series: [{
						name: "気温",
						color: Highcharts.getOptions().colors[3],
						showInLegend: false,
						data: data
				}]
		});
	});
</script>
